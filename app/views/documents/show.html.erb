<%- model_class = Document -%>
<div class="page-header">
  <h1><%= @document.title %>
  <% unless @document.active %>
    <div class="pull-right">
      <%= fa_icon 'lock' %>
    </div>
    <% end %>
  </h1>
</div>
<%= div_for @document,
            class: (@document.active? ? 'editable' : 'locked') do %>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @document.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
    <dd><%= @document.active %></dd>
  </dl>
  <div class="document-sections">
    <%= render(@document.sections) || 'Nessuna sezione' %>
    <%= link_to 'Aggiungi sezione', new_document_section_path(@document), remote: true %>
  </div>
<% end %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              documents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_document_path(@document), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              document_path(@document),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
