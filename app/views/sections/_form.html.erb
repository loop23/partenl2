<%= form_for [@document, @section],
    :html => { :class => "form-horizontal section" } do |f| %>
  <%= f.hidden_field :document_id %>
  <% if @section.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @section.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control', autocomplete: :off %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :editable, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :editable, :class => 'form-control' %>
    </div>
    <%=f.error_span(:editable) %>
  </div>
  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :content, :class => 'form-control', autocomplete: :off %>
    </div>
    <%=f.error_span(:content) %>
  </div>
  <div class="form-group">
    <%= f.label :order, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :order, :class => 'form-control', autocomplete: :off %>
    </div>
    <%=f.error_span(:order) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary', remote: true %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                document_path(@document), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
